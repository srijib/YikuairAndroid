<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mm_listitem_simple"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_resume"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bt_delet_pressed"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sponsor_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_resume"/>

        <LinearLayout
            android:id="@+id/ll_cancel_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel_line" />
        </LinearLayout>

        <TextView
            android:id="@+id/sponsor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/sponsor_head"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/sponsor_head"
            android:textColor="#999"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sponsor_head"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/sponsor_head"
            android:textSize="15dp" 
            android:layout_marginRight="150dp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/sponsor_head"
            android:layout_marginRight="15dp"
            android:textColor="#999"
            android:textSize="15dp" />
			
        <Button
            android:id="@+id/del"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_delete_normal"
            android:text="@string/delete"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/sponsor_head"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/ico_edit_item"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>